{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": false,
    "noUnusedLocals": true,
    "isolatedModules": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "allowJs": true,
    "composite": true,
    "lib": [
      "ESNext"
    ]
  },
  "exclude": [
    "**/node_modules/**",
    "**/*.test.*"
  ],
  "ts-node": {
    "files": true,
    "esm": true,
    "transpileOnly": true
  }
}